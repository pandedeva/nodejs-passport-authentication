<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Daftar</h1>
      <%- include("./partials/messages"); %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Nama</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Masukan Nama" value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Masukan Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Buat Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
          <input type="checkbox" onclick="lihatPassword()" /> Lihat Password
        </div>
        <div class="form-group mt-4">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          <input type="checkbox" onclick="lihatPassword2()" /> Lihat Password
        </div>
        <button type="submit" class="btn btn-primary btn-block">Daftar</button>
      </form>
      <p class="lead mt-4">Sudah mempunyai akun ? <a href="/users/login">Masuk</a></p>
    </div>
  </div>
</div>
<script>
  function lihatPassword() {
    const x = document.getElementById("password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
  function lihatPassword2() {
    const x = document.getElementById("password2");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>
